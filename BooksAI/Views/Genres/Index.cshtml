            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="Fantasy" class="genre">Фэнтези</a>
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="ScienceFiction" class="genre">Научная фантастика</a>
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="Biography" class="genre">Биография</a>
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="Romance" class="genre">Роман</a>
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="Thriller" class="genre">Триллер</a>
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="Horror" class="genre">Ужасы</a>
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="HistoricalFiction" class="genre">Исторический роман</a>
