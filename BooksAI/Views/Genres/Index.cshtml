@{
    ViewData["Title"] = "Genres";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="~/css/genres.css" />
<div class="catalog">
    <div class="container">
        <img src="~/images/MaskGroup.png" alt="pero" class="background-image " />
        <div class="catalog-title">
            Выберите жанр книги
        </div>
        <div class="genres-container">
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="Fiction" class="genre">Художественная литература</a>
            <a asp-controller="GenresDetail" asp-action="Index" asp-route-name="NonFiction" class="genre">Нехудожественная литература</a>
