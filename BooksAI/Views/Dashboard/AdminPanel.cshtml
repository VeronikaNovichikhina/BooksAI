@{
    ViewData["Title"] = "AdminPanel";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="~/css/adminPanel.css" />

@model Book

<div class="container">
    <div class="admin-panel">
        <h2>@ViewBag.Message</h2>
        <p>Здесь панель администратора</p>
    </div>
</div>


<div class="form-items">
    <div id="adminForm">

        <form asp-controller="Dashboard" asp-action="AddBook" method="post" enctype="multipart/form-data">
            <!-- Название -->
            <div class="form-group">
                <input asp-for="Title" class="form-control" placeholder="Название" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Жанр -->
            <div class="form-group">
                <select asp-for="Genre" class="form-control">
                    <option value="" disabled selected>Выберите жанр</option>
                    <option value="Fiction">Художественная литература</option>
                    <option value="NonFiction">Нехудожественная литература</option>
                    <option value="Mystery">Детектив</option>
                    <option value="Fantasy">Фэнтези</option>
                    <option value="ScienceFiction">Научная фантастика</option>
                    <option value="Biography">Биография</option>
                    <option value="Romance">Роман</option>
                    <option value="Thriller">Триллер</option>
                    <option value="Horror">Ужасы</option>
                    <option value="HistoricalFiction">Исторический роман</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <!-- Автор -->
            <div class="form-group">
                <input asp-for="Author" class="form-control" placeholder="Автор" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <!-- Цена -->
            <div class="form-group">
                <input asp-for="Price" class="form-control" placeholder="Цена" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Год -->
            <div class="form-group">
                <input asp-for="Year" class="form-control" placeholder="Год (например, 2023)" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>


            <button type="submit" class="btn-lr">Добавить книгу</button>
        </form>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-3">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
</div>





